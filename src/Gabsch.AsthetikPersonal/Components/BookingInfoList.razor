@using Gabsch.AsthetikPersonal.Models

<div class="container" style="margin-top: 4vh; margin-bottom: 4vh;">
    <div class="container-centered">
        <div class="booking-container font">
            @foreach (var (item, index) in BookingItems.Select((value, i) => (value, i + 1)))
            {
                <div class="booking-info-container">
                    <div class="booking-item item-name">
                        <h3>@item.DisplayName</h3>
                    </div>
                    <div class="booking-item item-content">
                        <p>@item.Time</p>
                        <p>@item.Price €</p>
                    </div>
                    <div class="booking-item item-button">
                        <CheckoutButton ItemNameLink="@item.DisplayName" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@code {
    [Parameter]
    public IList<BookingItem> BookingItems { get; set; }
}
